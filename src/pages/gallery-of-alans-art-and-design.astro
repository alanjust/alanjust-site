---
import BaseLayout from '../layouts/BaseLayout.astro';
import SideNav from '../components/SideNav.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('portfolio', ({ data }) => data.showProject);
const projects = allProjects.sort((a, b) => a.data.sortOrder - b.data.sortOrder);
const categories = ['All', ...new Set(projects.map(p => p.data.category).filter(Boolean))];
---

<BaseLayout title="Gallery — Alan Just" currentPath="/gallery-of-alans-art-and-design">
  <section class="section">
    <div class="section-with-left-menu">

      <SideNav currentPath="/gallery-of-alans-art-and-design" />

      <div class="div-right-side portfolio-page">

        <!-- Category filter -->
        <div class="category-filter" id="category-filter">
          {categories.map(cat => (
            <button class={cat === 'All' ? 'active' : ''} data-filter={cat}>{cat}</button>
          ))}
        </div>

        <!-- Masonry columns container -->
        <div class="masonry" id="masonry">
          {projects.map(project => (
            <a
              href={`/portfolio/${project.data.projectSlug}`}
              class="masonry-item"
              data-category={project.data.category}
            >
              {project.data.heroImage && (
                <img
                  src={project.data.heroImage}
                  alt={project.data.title}
                  loading="lazy"
                />
              )}
              <div class="masonry-overlay">
                <span class="masonry-title">{project.data.title}</span>
                {project.data.category && (
                  <span class="masonry-category">{project.data.category}</span>
                )}
              </div>
            </a>
          ))}
        </div>

      </div><!-- /.div-right-side -->
    </div><!-- /.section-with-left-menu -->
  </section>
</BaseLayout>

<style>
  .portfolio-page {
    width: 100%;
  }

  .masonry {
    column-count: 3;
    column-gap: 1.5rem;
    width: 100%;
  }

  .masonry-item {
    display: block;
    break-inside: avoid;
    position: relative;
    margin-bottom: 1.5rem;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    background: #111;
  }

  .masonry-item img {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: transform 0.4s ease;
  }

  .masonry-item:hover img {
    transform: scale(1.03);
  }

  .masonry-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.75) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1rem;
    border-radius: 8px;
  }

  .masonry-item:hover .masonry-overlay {
    opacity: 1;
  }

  .masonry-title {
    color: #fff;
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .masonry-category {
    color: rgba(255,255,255,0.65);
    font-size: 0.7rem;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    margin-top: 3px;
  }

  /* Hidden items: collapse entirely so columns reflow */
  .masonry-item.hidden {
    display: none;
  }

  @media (max-width: 991px) {
    .masonry { column-count: 2; column-gap: 1rem; }
    .masonry-item { margin-bottom: 1rem; }
  }

  @media (max-width: 479px) {
    .masonry { column-count: 1; }
  }
</style>

<script>
  const filterBar = document.getElementById('category-filter');
  const masonry = document.getElementById('masonry');

  filterBar?.addEventListener('click', (e) => {
    const btn = (e.target as HTMLElement).closest('button');
    if (!btn) return;

    const filter = btn.dataset.filter ?? 'All';

    // Update active state
    filterBar.querySelectorAll('button').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');

    // Show/hide items — using class toggle so CSS columns reflow naturally
    masonry?.querySelectorAll<HTMLElement>('.masonry-item').forEach(item => {
      const match = filter === 'All' || item.dataset.category === filter;
      item.classList.toggle('hidden', !match);
    });
  });
</script>
