---
interface Props {
  title: string;
  slug: string;
  heroImage: string;
  category: string;
}

const { title, slug, heroImage, category } = Astro.props;
---

<a href={`/portfolio/${slug}`} class="portfolio-card" data-category={category}>
  {heroImage
    ? <img src={heroImage} alt={title} loading="lazy" />
    : <div class="portfolio-card-placeholder" />
  }
  <div class="portfolio-card-overlay">
    <span class="portfolio-card-title">{title}</span>
    {category && <span class="portfolio-card-category">{category}</span>}
  </div>
</a>

<style>
  .portfolio-card-placeholder {
    width: 100%;
    height: 100%;
    background: #ddd;
  }
</style>
